{
  "name": "sumx",
  "version": "1.0.0",
  "description": "AI-powered research paper analysis platform with scientific evaluation capabilities",
  "main": "src/server/app.js",
  "scripts": {
    "start": "node src/server/app.js",
    "dev": "nodemon src/server/app.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "build": "echo 'No build step required for this application'",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "setup": "npm install && echo 'Please configure your .env file with OPENROUTER_API_KEY'",
    "health": "curl http://localhost:3000/api/health || echo 'Server not running'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/saky-semicolon/SumX.git"
  },
  "keywords": [
    "ai",
    "research",
    "paper",
    "analysis",
    "scientific",
    "pdf",
    "nlp",
    "academic",
    "summarization",
    "evidence-based"
  ],
  "author": {
    "name": "Saky",
    "url": "https://www.saky.space"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/saky-semicolon/SumX/issues"
  },
  "homepage": "https://github.com/saky-semicolon/SumX#readme",
  "dependencies": {
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "multer": "^2.0.2",
    "pdf-parse": "^2.3.11"
  },
  "devDependencies": {
    "eslint": "^9.37.0",
    "eslint-config-node": "^4.0.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
